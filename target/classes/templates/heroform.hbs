{{#partial "title"}}Hero Form{{/partial}}

{{#partial "content"}}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <form action="/heroform" method="post">
                    <div class="form-group">
                        <label for="name">Hero Name</label>
                        <input type="text" name="hero_name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="age">Hero age</label>
                        <input type="text" name="hero_age" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="power">Special Power</label>
                        <input type="number" name="special_power" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="weakness">Hero Weakness</label>
                        <input type="number" name="hero_weakness" class="form-control">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-sm">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{/partial}}

