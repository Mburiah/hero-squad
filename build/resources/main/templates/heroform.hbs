{{#partial "title"}}Hero Form{{/partial}}

{{#partial "content"}}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <form action="/heroform" method="post" required>
                    <div class="form-group">
                        <label for="name">Hero Name</label>
                        <input type="text" name="hero_name" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="age">Hero age</label>
                        <input type="text" name="hero_age" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="power">Special Power</label>
                        <input type="text" name="special_power" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="weakness">Hero Weakness</label>
                        <input type="text" name="hero_weakness" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <select class="form-control form-control-sm" required="required">
                            <option value="" class="selected disabled">Select Squad</option>
                            {{#each squads}}
                                <option value="{{squadId}}">{{squadName}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-sm" required>Submit Hero</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}

