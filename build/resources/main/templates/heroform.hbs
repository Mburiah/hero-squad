{{#partial "title"}}Hero Form{{/partial}}

{{#partial "content"}}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <form action="/heroform" method="post">
                    <div class="form-group">
                        <label for="name">Hero Name</label>
                        <input type="text" name="squad_name" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="cause">Hero age</label>
                        <input type="text" name="squad_cause" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="max">Special Power</label>
                        <input type="number" name="max_size" class="form-control">
                    </div>

                    <div class="form-group">
                        <label for="max">Hero Weakness</label>
                        <input type="number" name="max_size" class="form-control">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-sm">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{/partial}}

